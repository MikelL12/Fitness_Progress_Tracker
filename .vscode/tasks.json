{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/opt/homebrew/Cellar/gcc/14.2.0_1/bin/g++-14",
            "args": [
                "-std=c++17",
                "-o",
                "${workspaceFolder}/main",
                "${workspaceFolder}/*.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiles all .cpp files with g++-14 from Homebrew"
        }
    ]
}
